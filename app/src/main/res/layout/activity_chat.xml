<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    android:background="@drawable/bg_main">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/icblur"
        android:alpha="0.6"
        android:scaleType="centerCrop"/>

    <!-- Chat Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp">

            <!-- Back Arrow -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow"
                android:layout_gravity="center_vertical"/>

            <!-- User Profile Image -->
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/profile_image"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"/>

            <!-- User Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <!-- Search Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <!-- Chat Messages -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Add chat message views dynamically here -->

        </ScrollView>

        <!-- Input Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <!-- Camera Icon -->
            <ImageView
                android:id="@+id/image_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/circle_camera"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <!-- Message Input -->
            <EditText
                android:id="@+id/edit_text_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image_camera"
                android:layout_toStartOf="@+id/button_send"
                android:hint="Type a message"
                android:textColorHint="#80FFFFFF"
                android:textColor="@color/white"
                android:background="@drawable/bg_edit_text_message"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true"/>

            <!-- Send Button -->
            <ImageButton
                android:id="@+id/button_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/paper_plane_top"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
